# Database Configuration
DATABASE_URL=sqlite:///compliance.db
# For PostgreSQL: postgresql://user:password@localhost:5432/compliance_db

# OpenAI Configuration (optional)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1500

# Application Settings
APP_DEBUG=false

# Scanning Configuration
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RETRY_BACKOFF=0.5
MAX_POLICY_LENGTH=8000
MAX_BATCH_SIZE=10

# Scoring Weights (out of 100 total)
SCORE_COOKIE_CONSENT=30
SCORE_PRIVACY_POLICY=30
SCORE_CONTACT_INFO=20
SCORE_TRACKERS_MAX=20

# Database Pool Settings
DB_POOL_SIZE=5
DB_POOL_RECYCLE=300

# History Settings
DEFAULT_HISTORY_LIMIT=20
